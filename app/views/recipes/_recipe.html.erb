<div id="<%= dom_id recipe %>">
  <h1>
    <strong>
    <%= recipe.name %>
    </strong>
  </h1>
  <div style="display: flex; justify-content: space-between">
    <p><strong>Preparation time:</strong><%= recipe.preparation_time %></p>

    <div class="form-check form-switch">
      <label class="form-check-label" for="flexSwitchCheckChecked">Public: </label>
      <%if recipe.public %>
        <input style="color: green" class="form-check-input" type="checkbox" checked disabled>
      <% else %>
        <input class="form-check-input" type="checkbox" disabled>
      <% end %>
    </div>
  </div>

  <p>
    <strong>Cooking time:</strong>
    <%= recipe.cooking_time %>
  </p>

  <p>
    <%= recipe.description %>
  </p>

</div>
