<div class="col-md-6 mx-auto text-start">
  <%= form_with(model: recipe_food) do |form| %>
    <% if recipe_food.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(recipe_food.errors.count, "error") %> prohibited this recipe_food from being saved:</h2>

        <ul>
          <% recipe_food.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :quantity, class: 'form-label' %>
      <%= form.number_field :quantity, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :food_id, class: 'form-label' %>
      <%= form.select :food_id, Food.all.collect {|u| [u.name, u.id] },{ :multiple => true, :size => 10 }, class: 'form-select' %>
    </div>

    <div class="form-group">
      <%= form.label :recipe_id, class: 'form-label' %>
      <%= form.select :recipe_id, Recipe.all.collect {|u| [u.name, u.id] },{ :multiple => true, :size => 10 }, class: 'form-select' %>
    </div>

    <div class="mt-2 text-end">
      <%= form.submit 'Submit', class: 'btn btn-sm btn-primary' %>
    </div>
  <% end %>

</div>